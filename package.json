{
  "name": "rebez",
  "version": "0.0.1",
  "description": "Cubic bezier implementation in Reason / OCaml",
  "esy": {
    "build": "pesy",
    "release": {
      "releasedBinaries": [
        "RebezApp.exe"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": ["rebez.lib"],
      "main": "TestRebez",
      "name": "TestRebez.exe"
    },
    "library": {
      "name": "rebez.lib",
      "namespace": "Rebez",
      "wrapped": false
    },
    "executable": {
      "require": ["rebez.lib"],
      "main": "RebezApp",
      "name": "RebezApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestRebez.exe"
  },
  "dependencies": {
    "@opam/dune": ">=1.6.0",
    "@esy-ocaml/reason": "*",
    "refmterr": "*",
    "ocaml": "^4.4.0",
    "pesy": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  }
}
